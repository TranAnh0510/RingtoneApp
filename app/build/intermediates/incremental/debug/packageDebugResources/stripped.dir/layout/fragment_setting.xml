<?xml version="1.0" encoding="utf-8"?>

                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/im_set_back" android:tag="layout/fragment_setting_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/signika_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/setting"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.appa.ui.customview.RippleCornerTextView
            android:id="@+id/tvLanguageOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_ripple"
            android:drawableStart="@drawable/ic_language_options"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/signika_medium"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingVertical="20dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="@string/language_options"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:backgroundColorView="#00FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <com.example.appa.ui.customview.RippleCornerTextView
            android:id="@+id/tvRateUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_permission_audio"
            android:drawableStart="@drawable/ic_rate_us"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/signika_medium"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingVertical="20dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="@string/rate_us"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:backgroundColorView="#00FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/tvLanguageOptions" />

        <com.example.appa.ui.customview.RippleCornerTextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_permission_audio"
            android:drawableStart="@drawable/ic_privacy_policy"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/signika_medium"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingVertical="20dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="@string/privacy_policy"
            android:textColor="#5F5F63"
            android:textSize="18sp"
            app:backgroundColorView="#00FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/tvRateUs" />


        <com.example.appa.ui.customview.RippleCornerTextView
            android:id="@+id/tvShareApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_permission_video"
            android:drawableStart="@drawable/ic_share_app"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/signika_medium"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingVertical="20dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="@string/share_app"
            app:backgroundColorView="#00FFFFFF"
            android:textColor="#5F5F63"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPrivacyPolicy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         