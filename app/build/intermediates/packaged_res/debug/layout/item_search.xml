<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_ripple_item"
        android:paddingHorizontal="@dimen/_10sdp"
         android:tag="layout/item_search_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="#00FFFFFF"
                android:background="#00FFFFFF"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imSound"
                    android:scaleType="centerCrop"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="@dimen/_37sdp"
                    android:src="@drawable/img_intro_1" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_play" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvNameSound"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/signika_bold"
            android:includeFontPadding="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toTopOf="@id/tvDuration"
            app:layout_constraintEnd_toStartOf="@id/imMoreInvisible"
            app:layout_constraintStart_toEndOf="@id/frameLayout"
            app:layout_constraintTop_toTopOf="@id/frameLayout"
            tools:text="Catch me" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/signika_regular"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout"
            app:layout_constraintEnd_toEndOf="@id/tvNameSound"
            app:layout_constraintStart_toStartOf="@id/tvNameSound"
            app:layout_constraintTop_toBottomOf="@id/tvNameSound"
            tools:text="00:99" />

        <ImageView
            android:id="@+id/imMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/ic_more"
            android:visibility="gone"
            android:background="@drawable/custom_ripple_image"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/frameLayout" />
        <ImageView
            android:id="@+id/imMoreInvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_ripple_image"
            android:padding="5dp"
            android:src="@drawable/ic_more"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frameLayout" />
        <ImageView
            android:id="@+id/imDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_ripple_image"
            android:padding="5dp"
            android:src="@drawable/ic_download"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frameLayout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="#252E32"
            app:layout_constraintTop_toBottomOf="@id/frameLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>


         