<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:orientation="vertical" android:tag="layout/item_cate_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImageSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imSound"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_intro_1"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNameCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/signika_medium"
            android:gravity="start"
            android:includeFontPadding="false"
            android:textColor="#F6F8F8"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/cvImageSound"
            app:layout_constraintStart_toStartOf="@id/cvImageSound"
            tools:text="Pop Sound" />

        <TextView
            android:id="@+id/tvSoundNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/signika_light"
            android:gravity="start"
            android:includeFontPadding="false"
            android:textColor="#F6F8F8"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tvNameCategories"
            app:layout_constraintStart_toStartOf="@+id/tvNameCategories"
            tools:text="120 Sounds" />


    </androidx.constraintlayout.widget.ConstraintLayout>


         