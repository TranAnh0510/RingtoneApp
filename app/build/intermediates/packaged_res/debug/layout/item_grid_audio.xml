<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_audio_select"
        android:paddingVertical="10dp" android:tag="layout/item_grid_audio_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImageRingTone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="9dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:background="#00FFFFFF"
            app:cardBackgroundColor="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/im_audio_device" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvNameAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/signika_semi_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/cvImageRingTone"
            app:layout_constraintStart_toStartOf="@+id/cvImageRingTone"
            app:layout_constraintTop_toBottomOf="@+id/cvImageRingTone"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/signika_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/tvSize"
            app:layout_constraintEnd_toEndOf="@id/tvNameAudio"
            app:layout_constraintStart_toStartOf="@id/tvNameAudio"
            app:layout_constraintTop_toBottomOf="@id/tvNameAudio"
            tools:text="03:34" />

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/signika_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/tvDuration"
            app:layout_constraintStart_toStartOf="@id/tvDuration"
            app:layout_constraintTop_toBottomOf="@id/tvDuration"
            tools:text="123 KB" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         