<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imCategory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_78sdp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/img_intro_1"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNameCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/signika_medium"
            android:gravity="start"
            android:includeFontPadding="false"
            android:textColor="#F6F8F8"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tvSoundNumber"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Pop Sound" />

        <TextView
            android:id="@+id/tvSoundNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/signika_light"
            android:gravity="start"
            android:includeFontPadding="false"
            android:textColor="#F6F8F8"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/cvImage"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="120 Sounds" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>