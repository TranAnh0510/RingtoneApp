<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/item_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_language_selected"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imFrag"
            android:layout_width="31.20dp"
            android:layout_height="31.20dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="20dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/signika_semi_bold"
            android:includeFontPadding="false"
            android:text="abc"
            android:layout_marginVertical="24dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imRadioButton"
            android:layout_width="23.40dp"
            android:layout_height="23.40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp" />


    </LinearLayout>

</layout>